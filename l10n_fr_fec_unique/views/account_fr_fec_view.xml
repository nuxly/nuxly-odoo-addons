<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <!-- Customise wizard view-->
    <record id="account_fr_fec_view_nuxly" model="ir.ui.view">
        <field name="name">account.fr.fec.form.view.nuxly</field>
        <field name="model">account.fr.fec</field>
        <field name="inherit_id" ref="l10n_fr_fec.account_fr_fec_view"/>
        <field name="arch" type="xml">
            <!-- Add the 'unique_export' checkbox after the 'test_file' field. -->
            <field name="test_file" position="after">
                <field name="unique_export"/>
            </field>
            <!-- Set 'date_from' and 'date_to' as required when 'unique_export' is False. -->
            <xpath expr="//field[@name='date_from']" position="attributes">
                <attribute name="attrs">{'required': [('unique_export', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_to']" position="attributes">
                <attribute name="attrs">{'required': [('unique_export', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>