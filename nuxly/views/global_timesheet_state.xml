<?xml version="1.0" ?>
<odoo>
	<!-- PopUp du wizard -->
	<record id="wizard_global_timesheet_state" model="ir.ui.view">
		<field name="model">global.timesheet.state</field>
		<field name="arch" type="xml">
			<form string="Etat des temps">
				<group>
					<field name="time_new_state" id="time_new_state"/>
				</group>

				<footer>
					<button string="Apply" name="wizard_change_state" type="object" class="oe_highlight" />
					ou
					<button string="Cancel" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<!-- PopUp du wizard -->
	<record id="delete_timesheet_line_confirm_view" model="ir.ui.view">
		<field name="model">global.timesheet.state</field>
		<field name="arch" type="xml">
			<form string="Suppresion de line de temps">
				<group>
					<span>Souhaitez-vous supprimer la ligne du temps ? </span>
				</group>

				<footer>
					<button string="Confirmer" name="confirm_delete" type="object" class="oe_highlight" />
					ou
					<button string="Annuler" class="oe_link" special="cancel" />
				</footer>
			</form>
		</field>
	</record>

	<record id="change_state_action" model="ir.actions.server">
		<field name="name">Change l'Ã©tat</field>
		<field name="model_id" ref="analytic.model_account_analytic_line"/>
		<field name="binding_model_id" ref="analytic.model_account_analytic_line"/>
		<field name="binding_view_types">list</field>
		<field name="state">code</field>
		<field name="code">action = records.wizard_show_state()</field>
	</record>
</odoo>
