<?xml version="1.0" ?>
<odoo>
	<record id="hr_analytic_timesheet" model="ir.ui.view">
		<field name="name">hr.analytic.timesheet</field>
		<field name="model">account.analytic.line</field>
		<field name="inherit_id" ref="hr_timesheet.timesheet_view_tree_user"/>
		<field name="arch" type="xml">
			<field name="unit_amount" position="attributes">
				<attribute name="string">Temps factur√©</attribute>
				<attribute name="widget" />
			</field>
			<field name="task_id" position="attributes">
				<attribute name="attrs">{'invisible':1}</attribute>
			</field>
			<field name="name" position="after">
				<field name="time_spend"/>
			</field>
			<field name="unit_amount" position="after">
				<field name="unit_time_spend"/>
				<field name="state" decoration-primary="state == 'to_check'" decoration-success="state == 'checked'" decoration-danger="state == 'draft'"/>
				<button name="event_delete" string="" type="object" icon="fa-trash-o"/>
			</field>
		</field>
	</record>

	<!--<menuitem id="hr_timesheet.timesheet_action_all"
            name="Feuille de temps"
			  action="hr_timesheet.act_hr_timesheet_line"
			  parent="project.menu_main_pm"
	/>-->


</odoo>
