<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add warning to notify duplicate partners names -->
        <record id="view_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form.view</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <div class="alert alert-warning oe_edit_only" role="alert" attrs="{'invisible': [('z_same_name_partner_id', '=', False)]}">
                        A partner with the same name already exists (<field name="z_same_name_partner_id"/>), are you sure to create a new one?
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>